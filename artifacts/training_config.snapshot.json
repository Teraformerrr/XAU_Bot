{
  "data_path": "data/processed/xauusd_5m.csv",
  "symbol": "XAUUSD",
  "timeframe": "5m",
  "label": {
    "horizon_bars": 6,
    "threshold_pct": 0.1
  },
  "features": {
    "include": [
      "EMA_20",
      "EMA_50",
      "EMA_200",
      "RSI_14",
      "MACD",
      "BB_upper",
      "BB_lower",
      "ATR",
      "close",
      "high",
      "low",
      "volume"
    ],
    "normalize": true
  },
  "split": {
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "shuffle": false
  },
  "trainer": {
    "name": "xgb_classifier",
    "params": {
      "n_estimators": 400,
      "max_depth": 6,
      "learning_rate": 0.05,
      "subsample": 0.9,
      "colsample_bytree": 0.9,
      "reg_lambda": 1.0,
      "tree_method": "hist"
    }
  },
  "output": {
    "model_dir": "models/xgb",
    "artifacts_dir": "artifacts",
    "report_dir": "reports/training",
    "model_name": "xgb_xauusd_5m.bin"
  }
}